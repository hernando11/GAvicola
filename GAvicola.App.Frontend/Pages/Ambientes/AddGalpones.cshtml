@page
@model GAvicola.App.Frontend.Pages.Ambientes.AddGalponesModel
@{
}
<h1>Asignar Galpon</h1>
<form method="post">
    <div class="form-group">
        <label for="idGalpon">Ambiente</label>
        <input type="hidden" id="idAmbiente"name="idAmbiente" class="form-control" value="@Model.gambiente.Id" readonly>
        <input type="text" class="form-control" value="@Model.gambiente.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idGalpon">Galpon</label>
        <select name="idGalpon" id="idGalpon" class="form-control">
            @foreach (var galpon in Model.galpones)
            {
                <option value="@galpon.Id">@galpon.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Asignar Galpon</button>
</form>
<A class="btn btn-secondary" asp-page="./index1">Volver</a>
