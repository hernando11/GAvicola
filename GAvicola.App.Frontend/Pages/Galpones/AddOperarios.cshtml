@page
@model GAvicola.App.Frontend.Pages.Galpones.AddOperariosModel
@{
}
<h1>Asignar Operario</h1>
<form method="post">
    <div class="form-group">
        <label for="idGalpon">Galpon</label>
        <input type="hidden" id="idGalpon"name="idGalpon" class="form-control" value="@Model.galpon.Id" readonly>
        <input type="text" class="form-control" value="@Model.galpon.Nombre" readonly>
    </div>
    <div class="form-group">
        <label for="idOperario">Operario</label>
        <select name="idOperario" id="idOperario" class="form-control">
            @foreach (var operario in Model.operarios)
            {
                <option value="@operario.Id">@operario.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Asignar Operario</button>
</form>
<A class="btn btn-secondary" asp-page="./index1">Volver</a>