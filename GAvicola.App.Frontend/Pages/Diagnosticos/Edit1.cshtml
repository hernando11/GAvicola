@using GAvicola.App.Dominio
@model GAvicola.App.Frontend.Pages.Diagnosticos.Edit1Model
@{
}
<h1>Editar Diagnostico</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="diagnostico.Id"></label>
        <input asp-for="diagnostico.Id" class="form-control" readonly>
        <span asp-validation-for="diagnostico.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="diagnostico.Descripcion">Descripcion diagnostico</label>
        <input asp-for="diagnostico.Descripcion" class="form-control">
        <span asp-validation-for="diagnostico.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="diagnostico.Fecha">Fecha diagnostico</label>
        <input asp-for="diagnostico.Fecha" class="form-control">
        <span asp-validation-for="diagnostico.Fecha" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Modificar Diagnostico</button>

</form>
<A class="btn btn-secondary" asp-page="./index1">Volver</a>